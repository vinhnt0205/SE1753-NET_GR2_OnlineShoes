<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/background_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Thông tin đơn hàng -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order Details"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtOrderId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order ID: "/>

        <TextView
            android:id="@+id/txtCustomerInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Customer: "/>

        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email: "/>

        <TextView
            android:id="@+id/txtMobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mobile: "/>

        <TextView
            android:id="@+id/txtTotalCost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Cost: "/>

        <TextView
            android:id="@+id/txtSaleName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sale Name: "/>

        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: "/>

        <!-- Thông tin người nhận -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Receiver Information"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="10dp"/>

        <TextView
            android:id="@+id/txtReceiverName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Full Name: "/>

        <TextView
            android:id="@+id/txtReceiverGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gender: "/>

        <TextView
            android:id="@+id/txtReceiverEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email: "/>

        <TextView
            android:id="@+id/txtReceiverMobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mobile: "/>

        <TextView
            android:id="@+id/txtReceiverAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address: "/>

        <!-- Danh sách sản phẩm -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ordered Products"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="10dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Điều chỉnh trạng thái đơn hàng -->
        <Spinner
            android:id="@+id/spinnerOrderStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnUpdateStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Status"
            android:paddingTop="10dp"/>

        <Button
            android:id="@+id/btnComplete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Complete Order"
            android:paddingTop="10dp"/>
    </LinearLayout>
</ScrollView>
