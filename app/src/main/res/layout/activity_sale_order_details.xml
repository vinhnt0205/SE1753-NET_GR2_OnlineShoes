<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/background_gradient"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Order Details Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Order Details"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>

                <TextView android:id="@+id/txtOrderId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Order ID: "/>

                <TextView android:id="@+id/txtCustomerInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Customer: "/>

                <TextView android:id="@+id/txtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email: "/>

                <TextView android:id="@+id/txtMobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mobile: "/>

                <TextView android:id="@+id/txtTotalCost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total Cost: "/>

                <TextView android:id="@+id/txtSaleName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sale Name: "/>

                <TextView android:id="@+id/txtStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status: "/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Receiver Information Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Receiver Information"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>

                <TextView android:id="@+id/txtReceiverName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Full Name: "/>

                <TextView android:id="@+id/txtReceiverGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gender: "/>

                <TextView android:id="@+id/txtReceiverEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email: "/>

                <TextView android:id="@+id/txtReceiverMobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mobile: "/>

                <TextView android:id="@+id/txtReceiverAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Address: "/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Ordered Products List -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ordered Products"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="10dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:clipToPadding="false"/>

        <!-- Order Status Update -->
        <Spinner
            android:id="@+id/spinnerOrderStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btnUpdateStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Status"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/btnComplete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Complete Order" />

    </LinearLayout>
</ScrollView>
